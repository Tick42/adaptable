    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Chrome",
            "sourceMaps": true,
            "port": 9222,
            "webRoot": "${workspaceFolder}/packages/adaptableblotter"
        },
        {
            "name": "Launch Chrome against localhost, with sourcemaps",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8080",
            "sourceMaps": true,
            "webRoot": "${workspaceFolder}/packages/adaptableblotter",
            "userDataDir": false
        }
    ]
}