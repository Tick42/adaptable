{
  "npmClientArgs": [
    "--pure-lockfile"
  ],
  "packages": [
    "packages/*",
    "packages/adaptableblotter-angular/projects/*"
  ],
  "command": {
    "publish": {
      "ignoreChanges": [
        "**/*.md",
        "**/docs/**",
        "**/test/**",
        "**/*.spec.js",
        "**/*.test.js",
        "**/*ignore",
        "**/*rc"
      ]
    }
  },
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true
}