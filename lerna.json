{
  "npmClientArgs": [
    "--pure-lockfile"
  ],
  "packages": [
    "packages/*"
  ],
  "command": {
    "publish": {
      "ignoreChanges": [
        "**/*.md",
        "**/docs/**",
        "**/test/**",
        "**/*.spec.js",
        "**/*.test.js",
        "**/*ignore",
        "**/*rc"
      ]
    }
  },
  "version": "independent"
}
