{
  "compilerOptions": {
    "allowJs": true,
    "sourceMap": false,
    "declaration": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "downlevelIteration": true,
    "emitDecoratorMetadata": false,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "dist", ".next"]
}
