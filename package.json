{
  "name": "adaptableblotter-monorepo",
  "version": "1.0.0",
  "private": true,
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/preset-typescript": "^7.3.3",
    "chalk": "^2.4.2",
    "copyfiles": "^2.1.0",
    "cpy-cli": "^2.0.0",
    "lerna": "^3.10.8",
    "next": "^8.1.0",
    "rimraf": "^2.6.3",
    "husky": ">=1",
    "lint-staged": ">=8",
    "prettier": "^1.17.0"
  },
  "scripts": {
    "pretty": "prettier --write \"packages/**/*.{js,jsx,ts,tsx,json,css,scss}\"",
    "cleanup": "lerna clean --yes",
    "publish": "lerna publish",
    "build-main": "npm run --prefix packages/adaptableblotter build-prod",
    "pack-ab": "npm pack ./packages/adaptableblotter"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/**/*.{js,jsx,ts,tsx,json,css,scss}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {}
}
