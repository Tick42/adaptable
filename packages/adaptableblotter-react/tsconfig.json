{
	"compilerOptions": {
		"module": "es2015",
		"moduleResolution": "node",
		"jsx": "react",
		"target": "es6",
		"lib": ["es2015", "es2016", "es2017", "dom"],
		"strict": true,
		"sourceMap": true,
		"noImplicitAny": false,
		"noUnusedLocals": false,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"downlevelIteration": true,
		"outDir": "dist/lib",
		"typeRoots": [
			"node_modules/@types",
			"typings"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"typings"
	]
}