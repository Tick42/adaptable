{
  "extends": "../adaptableblotter/tsconfig.json",
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "adaptableblotter-angular-aggrid": [
        "dist/adaptableblotter-angular-aggrid"
      ],
      "adaptableblotter-angular-aggrid/*": [
        "dist/adaptableblotter-angular-aggrid/*"
      ]
    }
  },
  "include": ["src/**/*", "../adaptableblotter/App_Scripts/**/*"]
}
