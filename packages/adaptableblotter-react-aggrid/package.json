{
  "name": "adaptableblotter-react-aggrid",
  "version": "4.0.1",
  "description": "",
  "keywords": [],
  "main": "./adaptableblotter-react-aggrid/src/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JonnyAdaptableTools/adaptableblotter.git",
    "directory": "packages/adaptableblotter-react-aggrid"
  },
  "bugs": {
    "url": "https://github.com/JonnyAdaptableTools/adaptableblotter/issues"
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverage": true
  },
  "devDependencies": {
    "@babel/runtime-corejs2": "^7.4.4",
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "@types/jest": "^22.0.0",
    "@types/node": "^10.0.3",
    "@types/react": "^16.8.10",
    "@zeit/next-sass": "^1.0.1",
    "ag-grid-community": "^20.2.0",
    "ag-grid-enterprise": "^20.2.0",
    "ag-grid-react": "^20.2.0",
    "babel-eslint": "^10.0.1",
    "colors": "^1.1.2",
    "commitizen": "^2.9.6",
    "copyfiles": "^2.1.0",
    "coveralls": "^3.0.0",
    "cpy-cli": "^2.0.0",
    "cross-env": "^5.0.1",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^5.14.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "gh-pages": "^1.2.0",
    "husky": "^0.14.0",
    "jest": "^22.0.2",
    "lint-staged": "^7.1.3",
    "lodash.camelcase": "^4.3.0",
    "node-sass": "^4.12.0",
    "postcss-url": "^8.0.0",
    "prettier": "^1.17.0",
    "prompt": "^1.0.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "release": "^6.0.1",
    "replace-in-file": "^3.0.0-beta.2",
    "rimraf": "^2.6.3",
    "ts-jest": "^22.0.0",
    "ts-node": "^6.0.0",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.1.0",
    "tslint-config-standard": "^7.0.0",
    "typedoc": "^0.12.0",
    "typescript": "^3.3.3"
  },
  "dependencies": {
    "resize-observer-polyfill": "^1.5.1"
  },
  "peerDependencies": {
    "mathjs": "^5.1.1",
    "react": "=>16.0.0",
    "react-dom": ">=16.0.0",
    "ag-grid-community": ">=20.2.0",
    "ag-grid-enterprise": ">=20.2.0"
  },
  "scripts": {
    "pretty": "prettier --write \"packages/**/*.{js,jsx,ts,tsx,json,css,scss}\" --fix",
    "release": "npm run build && npm run registry-publish",
    "canaryrelease": "npm run build && release pre && npm run registry-publish",
    "release:patch": "npm run build && release patch && npm run registry-publish",
    "release:minor": "npm run build && release minor && npm run registry-publish",
    "release:major": "npm run build && release major && npm run registry-publish",
    "registry-publish": "npm run build-package-json && npm publish dist",
    "build": "rimraf dist && npm run tsc && npm run sass && npm run copy-assets",
    "build-package-json": "node ./scripts/buildPackageJson",
    "tsc": "tsc --outDir dist",
    "sass": "node-sass ./src/index.scss ./dist/index.css && node-sass ./src/base.scss ./dist/base.css && node-sass ./src/themes/light.scss ./dist/themes/light.css && node-sass ./src/themes/dark.scss ./dist/themes/dark.css",
    "copy-assets": "cp -R ./src/fonts ./dist/fonts/ && cp README.md ./dist"
  }
}
